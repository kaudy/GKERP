{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <a class="btn btn-primary pull-right" href="{{ path('cidades_new') }}">Nova Cidade</a>    
        <h2>Listagem de Cidades</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Cidade</th>
                <th>Estado</th>  
                <th>UF</th>
                <th>Região</th>
                <th>Tipo</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            {% for cidade in cidades %}
                <tr>
                    <td>
                        <a href="{{ path('cidades_show', { 'id': cidade.id }) }}">
                            {{ cidade.id }}</a>
                    </td>
                    <td>{{ cidade.cidade }}</td>
                    <td>{{ cidade.idEstado }}</td>  
                    <td>{{ cidade.idEstado.uf }}</td>
                    <td>{{ cidade.idEstado.idRegiao }}</td>
                    <td>{{ cidade.idTipoCidade }}</td>  
                    <td>
                        <a class="btn btn-info" href="{{ path('cidades_edit', {'id': cidade.id}) }}" title="Editar">
                            <span class="glyphicon glyphicon-cog"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}